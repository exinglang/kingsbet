    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <select id="queryById" resultType="User" parameterType="string">
        <!-- 具体的sql -->
        SELECT
        str_nickname,user_id
        FROM
        t_user
        WHERE
        user_id = #{id}
    </select>
